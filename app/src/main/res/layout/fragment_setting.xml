<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.home.ui.fragment.SettingFragment">

    <ImageView
        android:id="@+id/iv_hidden"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_home_24"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toTopOf="parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_first_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_settings_24"
                app:riv_border_color="#333333"
                app:riv_border_width="@dimen/_1sdp"
                app:riv_corner_radius="@dimen/_5sdp"
                app:riv_mutate_background="true"
                app:riv_oval="false"
                app:riv_tile_mode="repeat" />

            <androidx.cardview.widget.CardView
                android:id="@+id/rv_baru_nih"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardBackgroundColor="@color/black">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.skydoves.androidribbon.RibbonView
                        android:id="@+id/ribbon_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="casual"
                        android:text="skydoves"
                        android:layout_margin="@dimen/_2sdp"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_14ssp"
                        app:ribbon_padding_top="@dimen/_10sdp"
                        app:ribbon_ribbonRadius="@dimen/_5sdp"
                        app:ribbon_rotation="0" />

                    <com.skydoves.androidribbon.ShimmerRibbonView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"
                        app:shimmer_base_alpha="1.0"
                        app:shimmer_highlight_alpha="0.5"
                        app:shimmer_ribbon_padding_bottom="0dp"
                        app:shimmer_ribbon_padding_top="0dp"
                        app:shimmer_ribbon_padding_right="@dimen/_10sdp"
                        app:shimmer_ribbon_rotation="50"
                        app:shimmer_ribbon_text="baru nih..."
                        app:shimmer_ribbon_textColor="@android:color/white"
                        app:shimmer_ribbon_textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>